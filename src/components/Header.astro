    const menu = document.querySelector("#menu")
    const togglemenu =  document.querySelector("#togglemenu")
    const x = togglemenu.children
    const sections = document.querySelector("#sections").children

    function handleCLick(){
        menu.classList.toggle("right-0")
        menu.classList.toggle("-right-full")
        menu.classList.toggle("bg-sky-500")
        menu.classList.toggle("bg-opacity-100")
        x[0].classList.toggle("bg-white")
        x[1].classList.toggle("opacity-100")
        x[2].classList.toggle("bg-white")
        x[0].classList.toggle("bg-black")
        x[1].classList.toggle("bg-black")
        x[2].classList.toggle("bg-black")
        x[0].classList.toggle("rotate-45")
        x[2].classList.toggle("-rotate-45")
        x[0].classList.toggle("translate-y-2")
        x[2].classList.toggle("-translate-y-2")
        x[0].classList.toggle("translate-x-4")
        x[2].classList.toggle("translate-x-4")
        togglemenu.classList.toggle("right-10")
        togglemenu.classList.toggle("right-2/3")
        togglemenu.classList.toggle("px-4")
    }
    togglemenu.addEventListener("mousedown", handleCLick)
    for(let section of sections){
        section.addEventListener("mousedown", handleCLick)
    }
</script>