                    <img class="transition-all duration-200 h-full" src={project.image} alt={project.title}/>
                    <div class={`bgEffect-${project.id} absolute bg-opacity-70 h-full top-full w-full bg-sky-600 transition-all duration-700 `}>
                        <div class="flex justify-center items-center h-5/6 gap-4 scale-50 md:scale-75 2xl:scale-100">
                            <a target="_blank" href={project.link}>
                                <svg class="hover:scale-110"  width="80px" height="80px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
