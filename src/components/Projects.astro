---
import projects from "../data/projects.json"
---

<section id="proyectos" class="px-10 mb-36 md:mb-0 md:px-20 md:min-h-screen flex flex-col">
    <h2 class="mb-12 text-3xl 2xl:text-5xl md:mb-20 md:mx-auto md:text-center">Proyectos</h2>
    <div class="flex justify-center flex-wrap gap-9">
        {projects.map(project=>{
            return(
